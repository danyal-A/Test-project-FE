{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
      },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],

    "rules": {
        "react/prop-types": [
            "error",
            {
              "ignore": ["ignoreProps"],
              "customValidators": ["propTypeValidators"],
              "skipUndeclared": true
            }
          ]
    }
}
